<div class="container mx-auto mt-3" style="width: 60%">
  <h2 style="text-align: center"><%= @cocktail.name %></h2>

  <div class="p-2" style="margin: 50px; background-color: white; box-shadow: 0px 0px 10px rgba(0,0,0,.2)">
    <p><%#= @cocktail.dose %></p>
    <p><%#= @cocktail.phone_number %></p>
    <p><%#= @cocktail.category %></p>

    <div>
      <h4>Cocktails</h4>
      <ul class= "list-unstyled pl-3">
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.ingredient.name %> ( <%= dose.description %> )
            <%= link_to "ðŸ—‘", dose_path(dose), method: :delete %>
          </li>
        <% end %>
      </ul>
    </div>
    <div>
      <%= link_to "1. Add your ingredients", new_cocktail_dose_path(@cocktail) %>
    </div>
    <div>
      <%= link_to "2. Edit cocktail", edit_cocktail_path(@cocktail) %>
    </div>
    <div>
      <%= link_to "3. Delete cocktail", cocktail_path(@cocktail), method: :delete %>
    </div>
    <div>
      <%= link_to "4. Back to cocktail list", cocktails_path %>
    </div>
  </div>
</div>
